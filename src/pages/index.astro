import { Image } from "astro:assets";
---

<SimpleLayout
  title="Pixelbook Blog | About"
  type="article"
  imageUrl={PixelBookWritingOnSelf}
  description="Pixelbook is a fictional character who loves to write and journal."
  publishedTime="2025-04-21T00:00:00Z"
